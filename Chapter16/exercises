#problem 2
import tkinter

def counterThing(someInt):
	someInt += 1

counterInt = 0
window = tkinter.TK()
frame = tkinter.Frame(window)frame.pack()
button = tkinter.Text(frame, text=counterInt, command=lambda: counterThing(counterInt))
button.pack()
window.mainLoop()

